<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:background="@android:color/holo_green_dark"
    android:padding="6dp">

    <TextView
        android:id="@+id/hoardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="This is a Hoard name" />

    <TextView
        android:id="@+id/is_gold_hoarded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/hoardName"
        app:layout_constraintTop_toBottomOf="@id/hoardName"
        tools:text="2" />

    <TextView
        android:id="@+id/is_hoard_accessible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/is_gold_hoarded"
        app:layout_constraintTop_toBottomOf="@id/is_gold_hoarded"
        tools:text="true" />
</androidx.constraintlayout.widget.ConstraintLayout>